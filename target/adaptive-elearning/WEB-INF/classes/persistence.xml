<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="Adaptive_ElearningPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.CourseReviews</class>
    <class>model.Tag</class>
    <class>model.Submissions</class>
    <class>model.LectureMaterial</class>
    <class>model.Instructors</class>
    <class>model.Sections</class>
    <class>model.ConversationMembers</class>
    <class>model.Articles</class>
    <class>model.McqChoices</class>
    <class>model.Reactions</class>
    <class>model.Courses</class>
    <class>model.CommentMedia</class>
    <class>model.Sysdiagrams</class>
    <class>model.Bills</class>
    <class>model.Assignments</class>
    <class>model.Users</class>
    <class>model.Categories</class>
    <class>model.McqQuestions</class>
    <class>model.CourseMeta</class>
    <class>model.Conversations</class>
    <class>model.Notifications</class>
    <class>model.ChatMessages</class>
    <class>model.EFMigrationsHistory</class>
    <class>model.Lectures</class>
    <class>model.Enrollments</class>
    <class>model.Comments</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <!-- Database configuration is now handled by DBConnection.java using env.properties -->
      <!-- These are placeholder values - actual values are read from env.properties -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost;databaseName=placeholder"/>
      <property name="jakarta.persistence.jdbc.user" value="placeholder"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="jakarta.persistence.jdbc.password" value="placeholder"/>
    </properties>
  </persistence-unit>
</persistence>
